{
  "name": "trimtree",
  "version": "1.0.2",
  "description": "CLI to help trimming the code dependency tree",
  "author": "Alisson Morais",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alissonfpmorais/trimtree"
  },
  "keywords": [
    "delete",
    "dependency",
    "file",
    "graph",
    "import",
    "legacy",
    "lib",
    "library",
    "refactor",
    "remove",
    "script",
    "util",
    "utility"
  ],
  "bin": {
    "trimtree": "./dist/src/index.js"
  },
  "type": "module",
  "exports": "./dist/src/index.js",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc && cp ./package.json ./dist && chmod +x dist/src/index.js",
    "format": "prettier . --write",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "lint:fix:cache": "npm run lint:fix -- --cache",
    "prepare": "husky install",
    "start:prod": "node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix:cache",
    "*.--write": "npm run format"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob-parent": "^6.0.2",
    "ts-morph": "^23.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/glob-parent": "^5.1.3",
    "@types/node": "^22.7.1",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  }
}
